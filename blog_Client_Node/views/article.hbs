<body>

  <section class="bg-light">

    <div class="container-fluid bg-light">
      <div class='row'>
        <div class='col'>
          <div class="alert alert-info" role="alert">
            Welcome! Please Add an article
          </div>
        </div>
      </div>

    </div>
    <br>
    <div class="container">
      <div class="row">
        <div class="col-2">
          <button class="btn btn-lg" onclick="document.location.replace('http://localhost:8880/home');">Back</button>
        </div>
        <div class="col-10">
    <h2 class="text-uppercase text-center mb-5">Add an article</h2>
    </div>
 </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col">

    <form action="/api/saveBlog" method="POST" enctype="multipart/form-data">

      <div class="form-outline mb-4">
         <label class="form-label" for="t1">Title (Should contain 8 words)</label>
        <input type="text" id="t1" name="title" class="form-control form-control-lg" />
      </div>

      <div class="input-group mb-4">
        <input type="file" class="form-control" name="txtImage" id="inputGroupFile04"
          aria-describedby="inputGroupFileAddon04" aria-label="Upload">
      </div>

      <div class="form-outline mb-4">
         <label class="form-label" for="a1">Author Name (e.g: Web Developer)</label>
        <input type="text" id="a1" name="author" class="form-control form-control-lg" />
      </div>

      <div class="form-outline mb-4">
         <label class="form-label" for="a2">About an author</label>
        <input type="text" id="a2" name="aboutAuthor" class="form-control form-control-lg" />
       </div>

      <div class="form-outline mb-4">
        <label class="form-label" for="cat">Category</label>
        <input type="text" id="cat" name="category" class="form-control form-control-lg" />
        </div>

      <div class="form-outline mb-4">
        <label class="form-label" for="p1">Paragraph 1 (Should contain 25 words)</label>
        <textarea type="textarea" rows="3" id="p1" name="para1" class="form-control form-control-lg"></textarea>
      </div>

      <div class="form-outline mb-4">
        <label class="form-label" for="p2">Paragraph 2 (Should contain 25 words)</label>
        <textarea type="textarea" rows="3" id="p2" name="para2" class="form-control form-control-lg"></textarea>
      </div>

      <div class="form-outline mb-4">
        <label class="form-label" for="p3">Paragrah 3 (Should contain 25 words)</label>
        <textarea type="textarea" rows="3" id="p3" name="para3" class="form-control form-control-lg"></textarea>
      </div>

      <div class="form-outline mb-4">
         <label class="form-label" for="p4">Paragrah 4 (Should contain 48 words)</label>
        <textarea type="textarea" rows="3" id="p4" name="para4" class="form-control form-control-lg"></textarea>
      </div>

      <div class="form-outline mb-4">
        <label class="form-label" for="p5">Paragrah 5 (Should contain 25 words)</label>
        <textarea type="textarea" rows="3" id="p5" name="para5" class="form-control form-control-lg"></textarea>
      </div>

      <div class="form-outline mb-4">
         <label class="form-label" for="p6">Paragrah 6 (Should contain 48 words)</label>
        <textarea type="textarea" rows="3" id="p6" name="para6" class="form-control form-control-lg"></textarea>
      </div>

      <div class="form-outline mb-4">
         <label class="form-label" for="key">Keywords</label>
        <input type="text" id="key" name="keywords" class="form-control form-control-lg" />
      </div>

      <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Add an
          article</button>
      </div>
    </form>
    </div>
      </div>
    </div>
  </section>

